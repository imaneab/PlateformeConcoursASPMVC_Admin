@model IEnumerable < PlateformeConcours.Models.File>


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            Gestion des anciens épreuves <small>Exemples</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">Concours</a></li>
            <li class="active">Exemples</li>
        </ol>

    </div>

    <div id="page-inner">

        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-default">

                    <div class="panel-body">
                        <div class="table-responsive">

                            <div class="panel-heading">
                                <h4 class="text-danger"> Table des anciens concours :</h4>
                            </div>

                            <div class="panel-body">
                                <div class="table-responsive">



                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">


                                        <tr>

                                            <th>
                                                @Html.DisplayNameFor(model => model.Name)
                                            </th>

                                            <th>
                                                @Html.DisplayNameFor(model => model.Annee)
                                            </th>


                                            <th>
                                                <a class="text-white bg-dark">Lien de Téléchargement</a>
                                            </th>

                                           

                                        </tr>


                                        @foreach (var i in Model)
                                        {
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => i.Titre_concours)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => i.Annee)
                                            </td>

                                            <td>

                                                @Html.ActionLink(i.Name, "Get", "File", new { Id = i.Id }, new { title = "Open PDF document" })


                                            </td>
                                            <td>
                                                @Html.ActionLink("Delete", "delete", "File", new { Id = i.Id, Id_fil = ViewData["ID"] }, new { title = "Supprimer le pdf" })

                                            </td>
                                        </tr>
                                        }

                                    </table>



                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

