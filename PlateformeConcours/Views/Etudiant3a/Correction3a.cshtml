@model List<PlateformeConcours.ViewModel.CorrectionViewModel>
@{
    ViewBag.Title = "Insertion Resultats";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            Correction <small>Liste des @ViewBag.Filiere</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li>@Html.ActionLink("Par Filieres", "ChoixFiliereCorrection") </li>
            <li class="active">Resultats</li>
        </ol>

    </div>
    <div id="page-inner">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Listes des Candidats
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    @using (Html.BeginForm("Correction3a", "Etudiant3a", FormMethod.Post, new { id = "correction3a_form" }))
                    {

                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th width="40px">NumDossier</th>
                                    <th>Cin</th>
                                    <th>Nom</th>
                                    <th>Prenom</th>
                                    <th>Diplome</th>
                                    <th>Filiere</th>
                                    <th>NoteMath</th>
                                    <th>Note Specialite</th>
                                </tr>
                            </thead>
                            <tbody>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                @for (int i = 0; i < Model.Count(); i++)
                                {
                                    @Html.HiddenFor(model => model[i].ID)
                                    <tr class="odd gradeX">
                                        <td>@Html.DisplayFor(model => model[i].NumDossier)</td>
                                        <td>@Html.DisplayFor(model => model[i].Cin)</td>
                                        <td>@Html.DisplayFor(model => model[i].Nom)</td>
                                        <td>@Html.DisplayFor(model => model[i].Prenom)</td>
                                        <td>@Html.DisplayFor(model => model[i].Diplome)</td>
                                        <td>@Html.DisplayFor(model => model[i].Filiere)</td>
                                        <td width="100px">
                                            @Html.EditorFor(model => model[i].NoteMath, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                            @Html.ValidationMessageFor(model => model[i].NoteMath, "", new { @class = "text-danger" })
                                        </td>
                                        <td width="100px">
                                            @Html.EditorFor(model => model[i].NoteSpecialite, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                            @Html.ValidationMessageFor(model => model[i].NoteSpecialite, "", new { @class = "text-danger" })
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Valider les notes" class="btn btn-success" />
                                <input type="reset" class="btn btn-danger" value="Reset" />
                            </div>
                        </div>

                    }
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>