@model PlateformeConcours.ViewModel.Preselection3aViewModel
@{
    ViewBag.Title = "Preselection 3ieme année";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            Preselection <small>Lancer la preselection pour les 3e</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Home/Index">Acceuil</a></li>
            <li><a href="#">Preselection</a></li>
            <li class="active">Données</li>
        </ol>

    </div>
    <div id="page-inner">
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="card-title">
                            <div class="title">Preselection pour les 3ieme années</div>
                        </div>
                    </div>
                    
                    <div class="panel-body">
                        <div class="col-sm-4">
                            @using (Html.BeginForm("Liste", "Etudiant3a", FormMethod.Post, new { @class = "inline-form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger", required = "required" })
                                <div class="form-group">
                                    <div class="form-group mx-sm-3 mb-2">
                                        <div class="editor-label">
                                            @Html.LabelFor(model => model.Filiere)
                                        </div>
                                        <div class="editor-field">
                                            @Html.DropDownList("X", ViewBag.ListFil as SelectList, "Selectionner une filiere", new { @class = "form-control", required = "required" })
                                            @Html.ValidationMessageFor(model => model.Filiere, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="editor-label">
                                    <b>Type de diplome</b>
                                </div>

                                <div class="editor-field">
                                    <select class="form-control" id="TypeDiplome" name="TypeDiplome" value="@Request.Form["TypeDiplome"]" required>
                                        <option>Selectionner un diplome</option>
                                        <option>DUT</option>
                                        <option>DEUG</option>
                                        <option>DEUST</option>

                                    </select>
                                    @Html.ValidationMessageFor(model => model.TypeDiplome, "", new { @class = "text-danger" })
                                </div>
                                <br />

                                <div class="editor-label">
                                    Coefficient
                                    @Html.LabelFor(model => model.Bac)
                                </div>

                                <div class="editor-field" style="width:100px">
                                    @Html.TextBoxFor(model => model.Bac, new {@class = "form-control", style = "width:360px", @maxlength = "1", required ="required" })
                                    @Html.ValidationMessageFor(model => model.Bac, "", new { @class = "text-danger" })
                                </div>
                                <br />
                                <div class="editor-label">
                                    Coefficient
                                    @Html.LabelFor(model => model.S1)
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.S1, new {@class = "form-control", style = "width:360px", @maxlength = "1", required ="required" })
                                    @Html.ValidationMessageFor(model => model.S1, "", new { @class = "text-danger" })
                                </div>
                                <br />
                                <div class="editor-label">
                                    Coefficient
                                    @Html.LabelFor(model => model.S2)
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.S2, new {@class = "form-control", style = "width:360px", @maxlength = "1", required ="required" })
                                    @Html.ValidationMessageFor(model => model.S2, "", new { @class = "text-danger" })
                                </div>
                                <br />
                                <div class="editor-label">
                                    Coefficient
                                    @Html.LabelFor(model => model.S3)
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.S3,new {@class = "form-control", style = "width:360px", @maxlength = "1", required ="required" })
                                    @Html.ValidationMessageFor(model => model.S3, "", new { @class = "text-danger" })
                                </div>
                                <br />
                                <div class="editor-label">
                                    Coefficient
                                    @Html.LabelFor(model => model.S4)
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.S4,new {@class = "form-control", style = "width:360px", @maxlength = "1", required ="required" })
                                    @Html.ValidationMessageFor(model => model.S4, "", new { @class = "text-danger" })
                                </div>
                                <br />
                                <div class="editor-label">
                                    Note
                                    @Html.LabelFor(model => model.Seuil)
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.Seuil, new {@class = "form-control", style = "width:360px", @maxlength = "2", required ="required" })
                                    @Html.ValidationMessageFor(model => model.Seuil, "", new { @class = "text-danger" })
                                </div>
                                <br />
                                <input type="submit" class="btn btn-info btn-lg" value="Lancer la selection" />
                            }
                            </div>
                        </div>

                    </div>
                        </div>
        </div>
    </div>
</div>