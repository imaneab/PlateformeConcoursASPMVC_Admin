@model IEnumerable<PlateformeConcours.ViewModel.ListDeliberation3ViewModel>
@{
    ViewBag.Title = "Liste Apres Deliberation";
    //ViewBag.Fil = Model.ToList()[0].Etudiant.Etudiant.Filiere.Titre;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    
<div id="page-wrapper">
    <div class="header">
        <h1 class="page-header">
            Liste Deliberation <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">Resultat apres deliberation</li>
        </ol>

    </div>

    <div id="page-inner">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div id="customers">
                <div class="panel-heading">
                    <div class="card-title">
                        <div class="title">  La liste du délibération pour les @ViewBag.Fil</div>
                    </div>
                </div>
                <div class="panel-body">

                    <div class="table-responsive">
                        <div>

                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th width="40px">Titre</th>
                                        <th>Nom</th>
                                        <th>Prenom</th>
                                        <th>Bac</th>
                                        <th>S1</th>
                                        <th>S2</th>
                                        <th>S3</th>
                                        <th>S4</th>
                                        <th>Spec</th>
                                        <th>Math</th>
                                        <th>Global</th>
                                        <th>Filiere</th>
                                        <th>Status</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="odd gradeX">
                                            <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Civilite)</td>
                                            <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Nom)</td>
                                            <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Prenom)</td>
                                            <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Note.NoteBac)</td>
                                            <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Note.S1)</td>
                                            <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Note.S2)</td>
                                            <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Note.S3)</td>
                                            <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Note.S4)</td>
                                            <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Note.NoteMath)</td>
                                            <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Note.Specialite)</td>
                                            <td>@Html.DisplayFor(e => item.NoteGlobal)</td>
                                            <td width="100px">@Html.DisplayFor(e => item.Etudiant.Etudiant.Filiere.Titre)</td>
                                            <td width="60px">
                                                @if (item.Etudiant.Etudiant.Etat == "admis")
                                                {
                                                    <span class="badge badge-success">Admis</span>
                                                }
                                                else if (item.Etudiant.Etudiant.Etat == "attente")
                                                {
                                                    <span class="badge badge-warning">Attente</span>
                                                }
                                                else
                                                { <span class="badge badge-dark">None</span>}
                                            </td>


                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                            </div>
                            <div class="form-group">
                                
                                <div class="float-md-right">
                                    @Html.ActionLink("Retour", "ChoixListeDeliberation", "Etudiant3a", null, new { @class = "btn btn-danger pull-right" })
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
